structure Monitor =
struct

val targetID_of = Adsb_Types.targetID_of;
val ownship_of = Adsb_Types.ownship_of;
val traffic_of = Adsb_Types.traffic_of;
val lat_of     = Adsb_Types.lat_of;
val lon_of     = Adsb_Types.lon_of;
val alt_of     = Adsb_Types.alt_of;

(*---------------------------------------------------------------------------*)
(* User code for monitor                                                     *)
(*---------------------------------------------------------------------------*)

val is_latched = False;

val default_TARGET_ID = Adsb_Types.TargetID_Recd 0 0;

fun mk_monitor_report sus = Adsb_Types.Monitor_Report_Recd 100 3 sus;

fun trueOpt opt = case opt of Some True => True | otherwise => False;

val latitude_DELTA = Utils.i2d 1;
val longitude_DELTA = Utils.i2d 1;
val altitude_DELTA = 2000;

fun in_ZONE_A ownship ship =
  Double.>= (lat_of ship) (Double.- (lat_of ownship) latitude_DELTA) andalso
  Double.<= (lat_of ship) (Double.+ (lat_of ownship) latitude_DELTA) andalso
  Double.>= (lon_of ship) (Double.- (lon_of ownship) longitude_DELTA) andalso
  Double.<= (lon_of ship) (Double.+ (lon_of ownship) longitude_DELTA) andalso
  (alt_of ship >= (alt_of ownship - altitude_DELTA)) andalso
  (alt_of ship <= (alt_of ownship + altitude_DELTA));

fun isIn ship reports =
   Array.exists (fn elt => (targetID_of ship = targetID_of elt)) reports;

fun suspect ownship ship previous =
    in_ZONE_A ownship ship andalso not(isIn ship previous);

fun suspectIDs ownship traffic previous =
  Array.tabulate
    (Array.length traffic)
    (fn i =>
       if suspect ownship (Array.sub traffic i) previous then
          targetID_of (Array.sub traffic i)
       else default_TARGET_ID);

val theState = Ref (None, None, None)
 : (Adsb_Types.traffic_report array option
    * Adsb_Types.traffic_report array option
    * bool option) ref;

val initStep = Ref True;

fun stepFn inports stateVars =
 let val observed = inports
     val (yesterday,today,abnormal) = stateVars
     fun pre x = x

     (*--------------------------*)
     (* Compute new state values *)
     (*--------------------------*)

     val (yesterday,today,abnormal) =
         if !initStep then
            let val yesterday = Some (traffic_of observed)
                val today     = Some (traffic_of observed)
                val abnormal  = Some False
                val () = (initStep := False)
            in
              (yesterday,today,abnormal)
            end
         else
	    let val yesterday = Some (Option.valOf today)
                val today = Some (traffic_of observed)
                val abnormal = Some
                    (Array.exists
                      (fn ship => suspect (ownship_of observed) ship (Option.valOf yesterday))
                      (traffic_of observed))
            in
               (yesterday,today,abnormal)
            end

     (*-----------------------*)
     (* Compute output values *)
     (*-----------------------*)

     val event_observed = True

     val suspect_traffic_out =
       if event_observed andalso trueOpt abnormal then
          Some
             (mk_monitor_report
               (suspectIDs (ownship_of observed)
	                   (traffic_of observed) (Option.valOf yesterday)))
       else
          None
 in
   ((yesterday,today,abnormal),suspect_traffic_out)
 end;

(* ---------------------------------------------------------------------------*)
(* One thread invocation                                                      *)
(* ---------------------------------------------------------------------------*)

fun parseInput () =
  Adsb_Parse.eventParse
        (Adsb_Contig.adsb_messages, Adsb_Parse.mk_adsb_messages)
        API.input_buffer;

fun monFn () =
 let val () = API.fill_input_buffer ()
 in
 case parseInput()
  of None => API.logInfo "Monitor warning: non-event received at \"Observed\" input port"
   | Some None => API.logInfo "Monitor warning: unable to parse input event"
   | Some (Some msg) =>
      let val (newState,outOpt) = stepFn msg (!theState)
          val () = theState := newState
      in case outOpt
          of None => ()
           | Some monitor_report =>
              let val rptBytes = Adsb_Types.encode_monitor_report monitor_report
                  val rpt_string = String.implode (List.map Utils.w8char rptBytes)
              in
                 API.put_Suspect_Traffic_Out rpt_string
              end
      end
 end

end (* Monitor *)

